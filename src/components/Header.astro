---
import { Icon } from 'astro-icon/components';
import { SITE_TITLE } from '../consts';
---

<header>
  <div
    class='pt-16 max-w-screen-md px-6 md:px-10 mx-auto w-full flex flex-row justify-between items-center'
  >
    <a href='/'>
      <h1 class='text-slate-800 text-2xl w-full text-start font-semibold'>{SITE_TITLE}</h1>
    </a>
    <a class='' href='/#'>
      <Icon name='mdi:chevron-right' class='text-slate-200 text-xl mr-1' />
    </a>
  </div>
  <div class='flex px-6 md:px-10 w-full max-w-screen-md mx-auto pt-4 pb-10'>
    <span class='h-0.5 bg-slate-100 w-full max-w-screen-md mx-auto'></span>
  </div>
</header>
